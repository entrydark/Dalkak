{
    "rules": {
        "semicolon": [true, "never"],
        "trailing-comma": true,
        "indent": [true, "spaces", 4],
        "whitespace": [
            true, 
            "check-branch", 
            "check-decl", 
            "check-operator", 
            "check-module",
            "check-seperator",
            "check-type",
            "check-type-operator",
            "check-preblock"
        ]
    }
}